<%= form_for @wagon, :html => { :class => "form-horizontal wagon" } do |f| %>

  <% if @wagon.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@wagon.errors.count, "error") %> prohibited this wagon from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @wagon.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :type, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :type, :class => 'form-control' %>
    </div>
    <%=f.error_span(:type) %>
  </div>
  <div class="form-group">
    <%= f.label :seats, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :seats, :class => 'form-control' %>
    </div>
    <%=f.error_span(:seats) %>
  </div>
  <div class="form-group">
    <%= f.label :train_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :train_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:train_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                wagons_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
