<%- model_class = Schedule -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <% if current_user.try(:admin?) %>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
        <th><%= model_class.human_attribute_name(:id) %></th>
      <% end %>

      <th><%= model_class.human_attribute_name(:form) %></th>
      <th><%= model_class.human_attribute_name(:to) %></th>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <% if current_user.try(:admin?) %>

          <td><%= link_to schedule.id, schedule_path(schedule) %></td>
          <td>
            <%= link_to t('.show', :default => t("helpers.links.show")),
                        schedule_path(schedule), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_schedule_path(schedule), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        schedule_path(schedule),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        <% end %>
        <td><%= schedule.form %></td>
        <td><%= schedule.to %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if current_user.try(:admin?) %>

  <%= link_to t('.new', :default => t("helpers.links.new")),
            new_schedule_path,
            :class => 'btn btn-primary' %>
<% end %>
