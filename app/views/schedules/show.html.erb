<%- model_class = Schedule -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Duration:</strong></dt>
  <dd><%= "#{@schedule.hours}:#{@schedule.minutes}" %></dd>
  <dt><strong>Train:</strong></dt>
  <dd><%= link_to @schedule.train.name, train_path(@schedule.train.id) %></dd>
</dl>
<div class="positions">
  <%= render 'positions/index' %>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
              schedules_path, :class => 'btn btn-default'  %>
<% if current_user.try(:admin?) %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_schedule_path(@schedule), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                schedule_path(@schedule),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% end %>
