<%= form_for @staff, :html => { :class => "form-horizontal staff" } do |f| %>

  <% if @staff.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@staff.errors.count, "error") %> prohibited this staff from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @staff.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :position, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :position, :class => 'form-control' %>
    </div>
    <%=f.error_span(:position) %>
  </div>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :experiance, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :experiance, :class => 'form-control' %>
    </div>
    <%=f.error_span(:experiance) %>
  </div>
  <div class="form-group">
    <%= f.label :about, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :about, :class => 'form-control' %>
    </div>
    <%=f.error_span(:about) %>
  </div>
  <div class="form-group">
    <%= f.label :published, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :published, :class => 'form-control' %>
    </div>
    <%=f.error_span(:published) %>
  </div>
  <div class="form-group">
    <%= f.label :station_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :station_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:station_id) %>
  </div>
  <div class="form-group">
    <%= f.label :train_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :train_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:train_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                staffs_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
