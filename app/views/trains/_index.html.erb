<%- model_class = Train -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <% if current_user.try(:admin?) %>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
        <th><%= model_class.human_attribute_name(:id) %></th>
      <% end %>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:type) %></th>
      <th>Current position</th>
    </tr>
  </thead>
  <tbody>
    <% @trains.each do |train| %>
      <tr>
        <% if current_user.try(:admin?) %>
          <td>
            <%= link_to t('.show', :default => t("helpers.links.show")),
                        train_path(train), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_train_path(train), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        train_path(train),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
          <td><%= link_to train.id, train_path(train) %></td>
        <% end %>
        <td><%= train.name %></td>
        <td><%= train.type %></td>
        <% if train.station %>
          <td><%= link_to train.station.name, station_path(train.station_id) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if current_user.try(:admin?) %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
            new_train_path,
            :class => 'btn btn-primary' %>
<% end %>
